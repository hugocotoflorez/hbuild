default:
    cc      gcc
    flags   -Wall -Wextra -fsanitize=address,null
    src     ./src/*
    inc     ./include
    filename hbuild
    exec     compile

compile:
    exec    1 install
    1       $cc $flags $src -L $inc -o $filename

install:
    exec    1
    1       mv ./$filename ~/.local/bin/$filename
